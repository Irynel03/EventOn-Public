@using EventOn.BusinessLogic.Helpers

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" @onclick="OnEventOnClick">EventOn</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="feed" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Feed
            </NavLink>
            <NavLink class="nav-link" href="orders">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Orders
            </NavLink>
            <NavLink class="nav-link" href="favorites">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> FollowedEvents
            </NavLink>
            @if (UserData.Instance.UserType == TypeOfUser.Organizer)
            {
                <NavLink class="nav-link" href="create-new-event">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Create Event
                </NavLink>
                <NavLink class="nav-link" href="user-created-events">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> My Created Events
                </NavLink>
            }
            <NavLink class="nav-link" href="settings">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Settings
            </NavLink>
        </div>
    </nav>
</div>